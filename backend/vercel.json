{
  "rewrites": [
    {
      "source": "/api/stripe/webhook",
      "destination": "/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.js"
    }
  ],
  "functions": {
    "index.js": {
      "runtime": "@vercel/node@2.x",
      "memory": 1024,
      "maxDuration": 10 
    }
  }
}
